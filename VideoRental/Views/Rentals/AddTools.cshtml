@model IEnumerable<InventoryRental.Models.Tool>

@{
    ViewBag.Title = "AddTools";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddTools</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
